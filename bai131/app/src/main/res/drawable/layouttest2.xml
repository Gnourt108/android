<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <solid android:color="#FFDEF1"></solid>
    <!--solid : tinh chỉnh màu nền-->
    <stroke android:color="#297B4B" android:width="3dp"></stroke>
    <!--Tinh chỉnh viền, độ gap của viền-->
    <corners android:radius="250dp"></corners>
    <!--Conner dùng để tinh chỉnh bo góc-->
    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
    <!--padding dùng để văn lề-->
    <gradient
        android:startColor="#076553"
        android:endColor="#0C342C"
        android:angle="45"></gradient>
</shape>